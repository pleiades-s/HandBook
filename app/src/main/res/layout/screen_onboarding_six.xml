<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_transparant">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/str_wakeup_time"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/rdo_gender_select"
                android:fontFamily="@font/calibri_bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_wakeup_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/drawable_edittext_black_overlay"
                android:text="08:00 AM"
                android:textColor="@color/rdo_gender_select"
                android:textSize="@dimen/dp_20"
                android:includeFontPadding="false"
                android:fontFamily="@font/calibri_light"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/str_bed_time"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/rdo_gender_select"
                android:fontFamily="@font/calibri_bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_bed_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/drawable_edittext_black_overlay"
                android:text="10:00 PM"
                android:textColor="@color/rdo_gender_select"
                android:textSize="@dimen/dp_20"
                android:includeFontPadding="false"
                android:fontFamily="@font/calibri_light"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/str_interval"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/rdo_gender_select"
                android:fontFamily="@font/calibri_bold"/>

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_20">

                <RadioButton
                    android:id="@+id/rdo_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/rdo_back_3"
                    android:text="15 Mins"
                    android:textColor="@drawable/rdo_back_3"
                    android:fontFamily="@font/calibri_regular"/>

                <RadioButton
                    android:id="@+id/rdo_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/rdo_back_3"
                    android:text="30 Mins"
                    android:textColor="@drawable/rdo_back_3"
                    android:fontFamily="@font/calibri_regular"/>

                <RadioButton
                    android:id="@+id/rdo_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/rdo_back_3"
                    android:text="45 Mins"
                    android:textColor="@drawable/rdo_back_3"
                    android:fontFamily="@font/calibri_regular"/>

                <RadioButton
                    android:id="@+id/rdo_35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/rdo_back_3"
                    android:text="1 Hour"
                    android:textColor="@drawable/rdo_back_3"
                    android:fontFamily="@font/calibri_regular"/>

            </RadioGroup>

            </HorizontalScrollView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_20"
                android:text=""
                android:textSize="@dimen/dp_15"
                android:textColor="@color/rdo_gender_select"
                android:fontFamily="@font/calibri_light"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>