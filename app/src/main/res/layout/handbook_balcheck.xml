<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/header_with_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="@dimen/dp_200"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totpointtext"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/calibri_bold"
            android:gravity="center"
            android:text="Current points"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totpoint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/calibri_bold"
            android:gravity="center"
            android:textSize="30sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coupcosttext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:text="Coupon cost"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/newbaltext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:text="New balance"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/coupcost"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:ems="10"
                android:fontFamily="@font/calibri_bold"
                android:inputType="numberDecimal"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/new_bal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:ems="10"
                android:fontFamily="@font/calibri_bold"
                android:inputType="numberDecimal"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buy_co"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/cross"
            android:fontFamily="@font/calibri_bold"
            android:text="Buy"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/no_buy"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="30dp"
            android:background="@color/black_20"
            android:fontFamily="@font/calibri_bold"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>