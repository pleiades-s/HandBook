<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/header_with_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_transparant"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_20"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/calibri_light"
                            android:gravity="center"
                            android:includeFontPadding="true"
                            android:text="You should stretch at least"
                            android:textColor="@color/rdo_gender_select"
                            android:textSize="@dimen/dp_20" />

                        <RelativeLayout
                            android:layout_width="@dimen/dp_170"
                            android:layout_height="@dimen/dp_170"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/water_bowl">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/lbl_goal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/calibri_bold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="5"
                                    android:textColor="@color/rdo_gender_select"
                                    android:textSize="@dimen/dp_35" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/lbl_unit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/calibri_bold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="minutes"
                                    android:textColor="@color/rdo_gender_select"
                                    android:textSize="@dimen/dp_25" />

                            </LinearLayout>

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_5"
                            android:fontFamily="@font/calibri_light"
                            android:gravity="center"
                            android:includeFontPadding="true"
                            android:text="per hour"
                            android:textColor="@color/rdo_gender_select"
                            android:textSize="@dimen/dp_20" />


                        <!--android:textColor="@color/rdo_gender_select"-->

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:text="@string/str_interval"
                    android:textColor="@color/rdo_gender_select"
                    android:textSize="@dimen/dp_20" />

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdo_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rdo_back_3"
                            android:button="@null"
                            android:fontFamily="@font/calibri_regular"
                            android:text="15 Mins"
                            android:textColor="@drawable/rdo_back_3" />

                        <RadioButton
                            android:id="@+id/rdo_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@drawable/rdo_back_3"
                            android:button="@null"
                            android:checked="true"
                            android:fontFamily="@font/calibri_regular"
                            android:text="20 Mins"
                            android:textColor="@drawable/rdo_back_3" />

                        <RadioButton
                            android:id="@+id/rdo_30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@drawable/rdo_back_3"
                            android:button="@null"
                            android:fontFamily="@font/calibri_regular"
                            android:text="30 Mins"
                            android:textColor="@drawable/rdo_back_3" />

                        <RadioButton
                            android:id="@+id/rdo_35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@drawable/rdo_back_3"
                            android:button="@null"
                            android:fontFamily="@font/calibri_regular"
                            android:text="35 Mins"
                            android:textColor="@drawable/rdo_back_3" />

                    </RadioGroup>

                </HorizontalScrollView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lbl_message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:text="Notification Type"
                    android:textColor="@color/rdo_gender_select"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lbl_message2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/calibri_light"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:text="(Level 3, 5 is set to default)"
                    android:textColor="@color/rdo_gender_select"
                    android:textSize="18sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdo_push"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rdo_back_3"
                            android:button="@null"
                            android:fontFamily="@font/calibri_regular"
                            android:text="Push"
                            android:textColor="@drawable/rdo_back_3" />

                        <RadioButton
                            android:id="@+id/rdo_vibrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@drawable/rdo_back_3"
                            android:button="@null"
                            android:checked="true"
                            android:fontFamily="@font/calibri_regular"
                            android:text="Vibrate"
                            android:textColor="@drawable/rdo_back_3" />

                        <RadioButton
                            android:id="@+id/rdo_LED"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@drawable/rdo_back_3"
                            android:button="@null"
                            android:fontFamily="@font/calibri_regular"
                            android:text="LED"
                            android:textColor="@drawable/rdo_back_3" />

                    </RadioGroup>

                </HorizontalScrollView>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_15"
                    android:backgroundTint="@color/cross"
                    android:fontFamily="@font/calibri_regular"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</LinearLayout>
