<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_transparant"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="false"
        android:orientation="vertical"
        android:padding="@dimen/dp_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/dp_20"
                android:fontFamily="@font/calibri_bold"
                android:text="Create Account"
                android:textColor="@color/rdo_gender_select"
                android:textSize="36sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_30"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="left"
                    android:text="Name"
                    android:textColor="#012C28"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri_regular"
                    android:gravity="left"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColor="#012C28"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="left"
                    android:inputType="textEmailAddress"
                    android:text="Email id"
                    android:textColor="#012C28"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri_regular"
                    android:gravity="left"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:textColor="#012C28"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Password (at least 6 letters)"
                    android:textColor="#012C28"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/calibri_regular"
                    android:inputType="textPassword"
                    android:textColor="#012C28"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Confirm Password"
                    android:textColor="#012C28"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/cpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/calibri_regular"
                    android:inputType="textPassword"
                    android:textColor="#012C28"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/createacc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/water_color"
                android:fontFamily="@font/calibri_bold"
                android:gravity="center"
                android:includeFontPadding="true"
                android:minWidth="@dimen/dp_80"
                android:text="Sign In"
                android:textColor="@color/white"
                android:textSize="20sp"></androidx.appcompat.widget.AppCompatTextView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>